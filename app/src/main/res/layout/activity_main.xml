<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gameGridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="5"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.5">

        <!-- First Row: Buttons and Vertical Lines -->
        <Button
            android:id="@+id/button_0_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="X"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_0_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="O"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_0_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="4"
            android:text="X"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- First Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_row="1"
            android:layout_columnSpan="5"
            android:background="#000000" />

        <!-- Second Row: Buttons and Vertical Lines -->
        <Button
            android:id="@+id/button_1_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="O"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_1_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="X"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_1_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="4"
            android:text="O"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Second Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_row="3"
            android:layout_columnSpan="5"
            android:background="#000000" />

        <!-- Third Row: Buttons and Vertical Lines -->
        <Button
            android:id="@+id/button_2_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="X"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="1"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_2_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="2"
            android:text="O"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Vertical Line -->
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="3"
            android:background="#000000"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/button_2_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="4"
            android:text="X"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>